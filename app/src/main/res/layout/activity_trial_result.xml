<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="edu.umd.cmsc436.tap.TrialResult">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="@color/grayBackground"
        android:textStyle="bold"
        android:text="Your Score\n"
        />

    <TextView
        android:id="@+id/score"
        android:text="SC"
        android:textColor="#FFFFFF"
        android:textSize="80sp"
        android:textStyle="bold"
        android:gravity="center"

        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/result_box"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />

    <TextView
        android:id="@+id/next_trial"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorAccent436"
        android:text="Click To Start Next Trial"
        android:textSize="30dp"
        android:onClick="onClick"
        />

</LinearLayout>
