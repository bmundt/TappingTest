<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ColorBlind" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary436</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark436</item>
        <item name="colorAccent">@color/colorAccent436</item>
    </style>

    <style name="AppTheme.ColorBlind.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ColorBlind.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.ColorBlind.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
